<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/homeFragment">

    <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.midtermexam.HomeFragment"
            android:label="Home"
            tools:layout="@layout/fragment_home" />

    <fragment
            android:id="@+id/articleFragment"
            android:name="com.example.midtermexam.ui.ArticleFragment"
            android:label="Article"
            tools:layout="@layout/fragment_article">

        <action
                android:id="@+id/action_articleFragment_to_articleDetailFragment"
                app:destination="@id/articleDetailFragment" />

    </fragment>

    <fragment
            android:id="@+id/articleDetailFragment"
            android:name="com.example.midtermexam.ui.ArticleDetailFragment"
            android:label="Detail Artikel"
            tools:layout="@layout/fragment_article_detail">

        <argument
                android:name="article"
                app:argType="com.example.midtermexam.data.Article" />

    </fragment>

</navigation>